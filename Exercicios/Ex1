//1. Fa√ßa um script para solicitar o nome do usu√°rio. Exiba uma mensagem de boas vindas com o nome.
function welcome() {
        var name = prompt('Qual seu nome?', '');
        alert('Ol√°, ' + name + '! Seja Bem-vindo(a)!üòÅ');
        return name;
    }

// 2. Utilize uma estrutura de controle para descobrir se o valor de sua idade √© par ou √≠mpar.
function verificador(idade) {
        if (idade % 2 === 0) {
            return 'par';
        } else {
            return '√≠mpar';
        }
    }

//3. Fa√ßa um la√ßo para imprimir todos os anos, do ano atual at√© o ano de seu nascimento.
function print(nascimento) {
        var atual = new Date().getFullYear();
        console.log('Esse √© o total de anos desde o seu nascimento, at√© o atual:');
        for (var ano = nascimento; ano <= atual; ano++) {
            console.log(ano);
        }
    }

//4. Pe√ßa ao usu√°rio para digitar idades de 10 pessoas. Exiba quantas pessoas s√£o maior de idade (18 anos) e quantas s√£o menores.
function idadesPessoas() {
        var maior18 = 0;
        var menor18 = 0;
        for (var i = 0; i < 10; i++) {
            var idadePessoa = parseInt(prompt('Informe a idade das pessoas ' + (i + 1) + ':', ''));
            if (idadePessoa >= 18) {
                maior18++;
            } else {
                menor18++;
            }
        }
        console.log('Pessoas maiores de idade: ' + maior18);
        console.log('Pessoas menores de idade: ' + menor18);
    }

//5. Declare as seguintes propriedades (vari√°veis) em uma classe aluno (nome, idade e peso), instancie um objeto com seu nome. Depois acesse e altere os valores correspondentes aos seus tipos: nome(string), idade(inteiro), peso(double). Apresente na console o conte√∫do de cada propriedade do objeto.

class Aluno {
        constructor(nome, idade, peso) {
            this.nome = nome;
            this.idade = idade;
            this.peso = peso;
        }
    }
    function main() {
        var nomeUsuario = welcome();
        var idadeUsuario = parseInt(prompt('Informe sua idade:', ''));
        console.log('Sua idade √© ' + verificador(idadeUsuario) + '.');
        print(new Date().getFullYear() - idadeUsuario);
        idadesPessoas();
        
        var meuAluno = new Aluno(nomeUsuario, idadeUsuario, 48); 
        console.log('Nome: ' + meuAluno.nome);
        console.log('Idade: ' + meuAluno.idade);
        console.log('Peso: ' + meuAluno.peso);
    }

    main();



